<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/capxcvcvgmhture">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/capxcvcvgmhture" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/shape_left_panel"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/shape_register_panel"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:paddingRight="50dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:textSize="30sp"
            android:id="@+id/textview"

            android:gravity="center"
            android:text="Join in As"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />




        <Button
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:layout_below="@id/textview"
            android:id="@+id/register1"
            android:text="Patient"
            android:textColorHint="@android:color/holo_purple"
            android:background="@drawable/shape_login_button"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_below="@id/register1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:id="@+id/register2"
            android:text="Pharmacist"
            android:textColorHint="@android:color/holo_purple"
            android:background="@drawable/shape_login_button"
            android:textColor="@android:color/background_light" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerInParent="true"
            android:visibility="gone"/>



    </RelativeLayout>


</RelativeLayout>